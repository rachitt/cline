# === Core ===
NODE_ENV=development
PORT=3000

# === Anthropic (powers Cline CLI) ===
ANTHROPIC_API_KEY=sk-ant-...

# === PagerDuty ===
PAGERDUTY_WEBHOOK_SECRET=your-webhook-signing-secret
PAGERDUTY_API_TOKEN=your-api-token

# === Slack ===
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-...

# === GitHub ===
GITHUB_TOKEN=ghp_...
GITHUB_DEFAULT_ORG=your-org

# === Database (Neon Postgres) ===
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/incident_responder?sslmode=require

# === Redis (Upstash) ===
REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# === Log Sources (optional - uses mock if not set) ===
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# === Cline CLI ===
CLINE_CLI_PATH=claude
CLINE_TIMEOUT_MS=300000
CLINE_MAX_TURNS=25
