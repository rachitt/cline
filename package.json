{
  "name": "incident-responder",
  "version": "1.0.0",
  "description": "Automated incident response bot powered by Cline CLI",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp -r ui/dist dist/ui 2>/dev/null || true",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "ui:dev": "cd ui && vite dev",
    "ui:build": "cd ui && vite build"
  },
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "bullmq": "^5.12.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.0",
    "@neondatabase/serverless": "^0.10.0",
    "fastify": "^5.1.0",
    "@fastify/static": "^8.0.0",
    "@fastify/cors": "^10.0.0",
    "octokit": "^4.0.0",
    "pino": "^9.4.0",
    "zod": "^3.23.0",
    "ioredis": "^5.4.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "drizzle-kit": "^0.25.0",
    "vitest": "^2.1.0"
  }
}
